<div class="row">
  <div class="col-md-3 hidden-xs hidden-sm"></div>
  <div class="col-md-6">

  <% if @errors %>
   <% @errors.messages.each do |k,v| %>
    <%= k %><%= v %>
   <% end %>
  <% end %>

    <form class="form-signin" method="POST" action="/add-new">
        <h2 class="form-signin-heading">Add New Music!</h2>
         <br/>
        <label for="inputFirstName" class="sr-only">Title</label>
        <input type="text" name="title" id="inputFirstName" class="form-control" placeholder="Title" required autofocus>
        <label for="inputLastName" class="sr-only">Author</label>
        <input type="text" name="author" id="inputLastName" class="form-control" placeholder="Author" required autofocus>
        <label for="inputLastName" class="sr-only">Description</label>
        <input type="text" name="description" id="inputLastName" class="form-control" placeholder="Description" required autofocus>
        <label for="inputLastName" class="sr-only">URL</label>
        <input type="text" name="url" id="inputLastName" class="form-control" placeholder="URL" required autofocus>
        <button class="btn btn-lg btn-block btn-warning" type="submit">Add</button>
      </form>
      <br/>
  </div>
  <div class="col-md-3 hidden-xs hidden-sm"></div>
</div>


